<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:fillViewport="false">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/halfscreen"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"/>


        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/user2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal">
    <ImageButton
        android:id="@+id/file"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/halfscreen"
        android:background="@null"
        android:contentDescription="Choose from gallery"
        android:src="@drawable/gallery" />
    
        

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/file"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/file"
        android:background="@null"
        android:contentDescription="Take photo by camera"
        android:src="@drawable/cam" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Phone Number"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Mailing Address"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55ED8A"
        android:text="Save and Next" />

    <Button
        android:id="@+id/bClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F25A5C"
        android:text="Clear" />

</LinearLayout>

    </ScrollView>